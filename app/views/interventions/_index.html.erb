<section id="interventionform">
	<div class="container">
		<header class="text-center mb-60">
			<h2>Intervention Form</h2>
			<hr />
		</header>
		<div class="row">
			<!-- FORM -->
			<div class="col-md-8 col-sm-8">
        <div class="row">
          <div class="col-md-4">
            <label for="intervention"> Customer list: </label>
            <% @customer = Customer.all %>
            <select id="customer_id" required class="form-control pointer"  name="intervention[customer_id]" >
              <option value="nulltest">--- Select ---</option>
              <% @customer.each do |customer| %>
                <option value="<%= customer.id %>">
                  <%= customer.company_name %>
                </option>
              <% end %>
            </select>
          </div>
          <div class="col-md-4">
            <label for="intervention"> Employee list: </label>
            <% @employees = Employee.all %>
            <select id="employee_id" required class="form-control pointer"  name="intervention[employee_id]" >
              <option value="None">None</option>
              <% @employees.each do |employee| %>
                <option value="<%= employee.id %>">
                  <%= employee.first_name %> <%= employee.last_name %>
                </option>
              <% end %>
            </select>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4">
            <label id="building_label" for="intervention"> Building list: </label>
            <select id="building_id" required class="form-control pointer"  name="intervention[building_id]" >
              <option value="nulltest" selected> </option>
            </select>
          </div>
          <div class="col-md-4">
            <label id="battery_label" for="intervention"> Battery list: </label>
            <select id="battery_id" required class="form-control pointer"  name="intervention[battery_id]" >
              <option value="nulltest" selected> </option>
            </select>
          </div>
          <div class="col-md-4">
            <label id="column_label" for="intervention"> Column list: </label>
            <select id="column_id" required class="form-control pointer"  name="intervention[column_id]" >
              <option value="nulltest" selected> </option>
            </select>
          </div>
          <div class="col-md-4">
            <label id="elevator_label" for="intervention"> Elevator list: </label>
            <select id="elevator_id" required class="form-control pointer"  name="intervention[elevator_id]" >
              <option value="nulltest" selected> </option>
            </select>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <label for="intervention">Description</label>
            <input id="intervention_description" type="text" value="" class="form-control" name="intervention[report]">
          </div>
        </div>
			</div>
			<div class="col-lg-3 col-sm-4 mt-60">										
